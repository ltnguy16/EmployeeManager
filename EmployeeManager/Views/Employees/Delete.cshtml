@model EmployeeManager.Models.UpdateEmployeeViewModel
@{
}

<h1>Deleting Employee</h1>
<form method="post" action="Update" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">id</label>
        <input type="text" class="form-control" readonly="readonly" asp-for="Id">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">First Name</label>
        <input type="text" class="form-control" readonly="readonly" asp-for="FirstName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Middle Name</label>
        <input type="text" class="form-control" readonly="readonly" asp-for="MiddleName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Last Name</label>
        <input type="text" class="form-control" readonly="readonly" asp-for="LastName">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input type="text" class="form-control" readonly="readonly" asp-for="Address">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" readonly="readonly" asp-for="DateOfBirth">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">SSN</label>
        <input type="text" id="ssn" class="form-control" readonly="readonly" asp-for="SocialSecurityNumber" />
    </div>
    <button type="submit" class="btn btn-danger">DELETE</button>
    <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-outline-primary">Back to Index</a>
</form>
